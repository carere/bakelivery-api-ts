{
  "name": "bakelivery-api-ts",
  "author": "Kevin Abatan <abatan.k@gmail.com>",
  "scripts": {
    "format": "prettier --write **/*.{ts,json}",
    "lint": "eslint . --ext .ts --cache --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.*",
    "@typescript-eslint/parser": "5.*",
    "commitizen": "4.*",
    "cz-conventional-changelog": "3.*",
    "eslint": "8.*",
    "eslint-config-prettier": "8.*",
    "eslint-plugin-fp": "2.*",
    "husky": "8.*",
    "lint-staged": "12.*",
    "prettier": "2.*",
    "sort-package-json": "1.*",
    "typescript": "4.*"
  },
  "wallaby": {
    "autoDetect": true,
    "files": [
      "src/**/*.ts"
    ],
    "tests": [
      "test/unit/*.spec.ts"
    ]
  }
}
